<% layout('layouts/boilerplate') %>
<div class="row g-3">
	<h1 class="text-center"> Find Your QuickCasher </h1>
	<div class="col-6 offset-3">
		<form action="/jobs" method="POST" novalidate class="validated-form">
			<div class="mb-3">
				<label class="form-label" for="title">Job Title</label>
				<input class="form-control" type="text" id="title" name="job[title]" required>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input class="form-control" type="text" id="location" name="job[location]" required>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="pay">Pay per session </label>
				<div class="input-group">
					<span class="input-group-text" id="pay-label">$</span>
					<input type="text" class="form-control" id="pay" name="job[pay]" placeholder="0" aria-label="Amount (to the nearest dollar)" required>
					<span class="input-group-text">.00</span>
				</div>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="duration">Duration per session (minutes)</label>
				<input class="form-control" type="text" id="duration" name="job[duration]" required> 
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image Url</label>
				<input class="form-control" type="text" id="image" name="job[image]" required>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" id="Description" name="job[description]" required></textarea>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>


			<div class="mb-3">
				<button class="btn btn-warning">Add Job</button>
			</div>
		<!-- </form>
		<a href="/jobs">All Jobs</a> -->
	</div>
</div>





  

